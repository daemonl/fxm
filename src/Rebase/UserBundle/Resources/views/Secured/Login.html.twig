{% extends 'RebaseBigvBundle::base.html.twig' %}

{% block pageTitle %}Login{% endblock %}
{% block user %}{% endblock %}
{% block main %}

{% if error %}
<div class="alert alert-error">{{ error.message }}<a class="close" data-dismiss="alert" href="#">&times;</a></div>
{% endif %}

<form class="form-horizontal" action="{{ path('login_check') }}" method="post">
    <fieldset>  
        <div class="control-group">
            <label class="control-label" for="username">Email</label>
            <div class="controls">
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="password">Password</label>
            <div class="controls">
                <input type="password" id="password" name="_password" />
            </div>
        </div>
    {#
        If you want to control the URL the user is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
        <div class="form-actions">
            <input class='btn btn-primary' type="submit" name="login" value="Login"/>
        </div>
    </fieldset>
</form>

    {% endblock %}